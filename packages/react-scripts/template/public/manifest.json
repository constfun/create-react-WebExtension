{
  "manifest_version": 2,
  "name": "Donut",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/browser-polyfill.js", "js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "background": {
      "scripts": ["js/browser-polyfill.js", "js/index.js"]
  },
  "web_accessible_resources": ["media/*"],
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Create React WebExtension"
  }
}
