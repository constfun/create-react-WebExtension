{
  "manifest_version": 2,
  "name": "Donut",
  "author": "Author",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "js/browser-polyfill.js",
      "js/index.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "media/*"
  ],
  "permissions": [
    "<all_urls>",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Create React WebExtension"
  }
}