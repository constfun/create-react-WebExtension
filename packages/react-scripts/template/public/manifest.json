{
  "manifest_version": 2,
  "name": "Create React WebExtension",
  "author": "Unknown",
  "version": "0.0.1",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/constfun/*.md"],
      "js": ["js/welcome.js"]
    }
  ],
  "background": {
    "scripts": [
      "js/user-guide-helper.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "media/*"
  ],
  "permissions": [
    "<all_urls>",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Open the Create React WebExtension User Guide"
  }
}