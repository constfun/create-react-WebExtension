{
  "manifest_version": 2,
  "name": "Donut",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "bundles/content/js/main.js"],
      "css": ["bundles/content/css/main.css"]
    }
  ],
  "background": {
      "scripts": ["browser-polyfill.js", "js/main.js"],
      "persistent": false
  },
  "web_accessible_resources": ["bundles/content/media/*"],
  "permissions": [
      "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Create React WebExtension"
  }
}
