{
  "manifest_version": 2,
  "name": "Donut",
  "version": "1.0",
  "icons": {
    "48": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bundles/content/static/js/main.js"],
      "css": ["bundles/content/static/css/main.css"]
    }
  ],
  "background": {
      "scripts": ["static/js/main.js"],
      "persistent": false
  },
  "web_accessible_resources": ["bundles/content/static/media/*"],
  "permissions": [
      "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "Create React WebExtension"
  }
}
